<% content_for :head do %>
  <meta property="og:url"           content="<%= url %>" />
  <meta property="og:title"         content="<%= strip_tags(title) %>" />
  <meta property="og:type"          content="<%= local_assigns[:type].nil? ? 'website' : type %>" />
  <meta property="og:description"   content="<%= strip_tags(description) %>" />
  <meta property="og:image"         content="<%= local_assigns[:image].nil? ? '' : image %>" />
  <meta property="og:image:width"   content="<%= local_assigns[:image_width].nil? ? '' : image_width %>" />
  <meta property="og:image:height"  content="<%= local_assigns[:image_height].nil? ? '' : image_height %>" />

  <meta name="twitter:card"         content="summary" />
  <meta name="twitter:site"         content="@scarpawines" />
  <meta name="twitter:title"        content="<%= url %>" />
  <meta name="twitter:description"  content="<%= strip_tags(description) %>" />
  <meta name="twitter:creator"      content="@scarpawines" />
  <meta name="twitter:domain"       content="<%= request.host %>" />
<% end %>
