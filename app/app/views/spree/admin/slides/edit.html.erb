<% content_for :page_title do %>
  <%= Spree.t('admin.update_slide') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t('admin.back_to_slides_list'), spree.admin_slides_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_slide_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @slide } %>
</div>

<div data-hook="admin_slide_new_form">
  <%= form_for [:admin, @slide], url: admin_slide_path(@slide.id), method: :put do |f| %>
    <fieldset data-hook="update_slide">
      <legend align="center"><%= Spree.t('admin.update_slide') %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
  <% end %>
</div>
