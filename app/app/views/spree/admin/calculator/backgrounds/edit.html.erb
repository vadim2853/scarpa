<% content_for :page_title do %>
  <%= Spree.t('admin.update_background') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t('admin.back_to_backgrounds_list'), spree.admin_calculator_backgrounds_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_calculator_background_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @background } %>
</div>

<div data-hook="admin_calculator_background_new_form">
  <%= form_for [:admin, @background], url: admin_calculator_background_path(@background.id), method: :put do |f| %>
    <fieldset data-hook="update_background">
      <legend align="center"><%= Spree.t('admin.update_background') %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
  <% end %>
</div>
