<% content_for :page_title do %>
  <%= Spree.t('admin.update_month') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t('admin.back_to_months_list'), spree.admin_calculator_months_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_calculator_month_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @month } %>
</div>

<div data-hook="admin_calculator_month_new_form">
  <%= form_for [:admin, @month] do |f| %>
    <fieldset data-hook="update_month">
      <legend align="center"><%= Spree.t('admin.update_month') %></legend>
      <%= render partial: 'form', locals: { f: f } %>
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
  <% end %>
</div>

