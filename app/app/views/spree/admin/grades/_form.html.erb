<div data-hook="admin_grade_form_fields" class="row">
  <div class="alpha">
    <%= f.field_container :quiz_id do %>
      <%= f.label :quiz_id, Spree.t('admin.quiz') %>
      <%= collection_select(:grade, :quiz_id, Spree::Quiz.all, :id, :title, 
            { selected: @grade.quiz_id }, class: 'select2_without_search_and_close') %>
      <%= error_message_on :grade, :quiz_id %>
    <% end %>
  </div>

  <div class="alpha">
    <%= f.field_container :title do %>
      <%= f.label :title, Spree.t('admin.title') %>
      <%= f.text_field :title, :class => 'fullwidth' %>
      <%= error_message_on :grade, :title %>
    <% end %>
  </div>

  <div data-hook="admin_grade_form_description_fields" class="alpha">
    <%= f.field_container :description do %>
      <%= f.label :description, Spree.t('admin.description') %>
      <%= f.cktext_area :description, :class => 'fullwidth' %>
      <%= f.error_message_on :description %>
    <% end %>
  </div>

  <div data-hook="admin_grade_form_number_fields" class="alpha">
    <%= f.field_container :number do %>
      <%= f.label :number, Spree.t('admin.number_of_grade') %>
      <%= f.number_field :number, :class => 'fullwidth' %>
      <%= f.error_message_on :number %>
    <% end %>
  </div>
</div>
