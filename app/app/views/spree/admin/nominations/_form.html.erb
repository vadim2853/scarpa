<div data-hook="admin_nomination_form_fields" class="row">
  <div class="alpha">
    <%= f.field_container :grade_id do %>
      <%= f.label :grade_id, Spree.t('admin.grade') %>
      <%= collection_select(:nomination, :grade_id, Spree::Grade.all, :id, :title, 
            { selected: @nomination.grade_id }, class: 'select2_without_search_and_close') %>
      <%= error_message_on :nomination, :grade_id %>
    <% end %>
  </div>

  <div class="alpha">
    <%= f.field_container :title do %>
      <%= f.label :title, Spree.t('admin.title') %>
      <%= f.text_field :title, :class => 'fullwidth' %>
      <%= error_message_on :nomination, :title %>
    <% end %>
  </div>

  <div data-hook="admin_nomination_form_minimum_fields" class="alpha">
    <%= f.field_container :min do %>
      <%= f.label :min, Spree.t('admin.min') %>
      <%= f.number_field :min, min: 0, :class => 'fullwidth' %>
      <%= f.error_message_on :min %>
    <% end %>
  </div>

  <div data-hook="admin_nomination_form_icon_fields" class="alpha">
    <%= f.field_container :icon do %>
      <%= f.label :icon, Spree.t(:icon) %>
      <%= f.file_field :icon, class: 'fullwidth' %>
      <%= f.error_message_on :icon %>
      <% if @nomination.icon.present? %>
        <%= image_tag f.object.icon %>
      <% end %>
    <% end %>
  </div>
</div>
