<% content_for :page_title do %>
  <%= Spree.t('admin.new_question') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t('admin.back_to_questions_list'), spree.admin_questions_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_question_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @question } %>
</div>

<div data-hook="admin_question_new_form">
  <%= form_for [:admin, @question], url: admin_questions_url, method: :post do |f| %>
    <fieldset data-hook="new_question">
      <legend align="center"><%= Spree.t('admin.new_question') %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </fieldset>
  <% end %>
</div>
