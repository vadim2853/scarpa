<% if can? :admin, Spree::Order %>
  <%= tab *Spree::BackendConfiguration::ORDER_TABS, icon: 'shopping-cart' %>
<% end %>

<% if can? :admin, Spree::Product %>
  <%= tab *Spree::BackendConfiguration::PRODUCT_TABS, icon: 'th-large' do %>
    <%- render partial: 'spree/admin/shared/product_sub_menu' %>
  <%- end %>
<% end %>

<% if can? :admin, :reports %>
  <%= tab *Spree::BackendConfiguration::REPORT_TABS, icon: 'file'  %>
<% end %>

<% if can? :admin, :general_settings %>
  <%= tab *Spree::BackendConfiguration::CONFIGURATION_TABS, label: Spree.t(:settings), icon: 'wrench', url: spree.edit_admin_general_settings_path %>
<% end %>

<% if can? :admin, Spree::Promotion %>
  <%= tab *Spree::BackendConfiguration::PROMOTION_TABS, url: spree.admin_promotions_path, icon: 'bullhorn' do %>
    <%- render partial: 'spree/admin/shared/promotion_sub_menu' %>
  <%- end %>
<% end %>

<% if can? :admin, Spree::StockItem %>
  <%= tab(:stock_items, :stock_transfers, url: spree.admin_stock_items_path, label: Spree.t(:stock), icon: 'cubes', match_path: %r(^/admin/stock)) do %>
    <%- render partial: 'spree/admin/shared/stock_sub_menu' %>
  <%- end %>
<% end %>

<% if Spree.user_class && can?(:admin, Spree.user_class) %>
  <%= tab *Spree::BackendConfiguration::USER_TABS, url: spree.admin_users_path, icon: 'user' %>
<% end %>

<% if can? :admin, Spree::Quiz %>
  <%= tab :quizzes, url: admin_quizzes_path, icon: 'info',
  match_path: %r(^/admin/questions|^/admin/grades|^/admin/quizzes|^/admin/question_variants|^/admin/nominations) do %>

    <% render partial: 'spree/admin/shared/quiz_sub_menu' %>
  <% end %>
<% end %>

<% if can? :admin, Spree::Slide %>
  <%= tab :slides, label: :slide, icon: 'tv', url: admin_slides_path %>
<% end %>

<% if can? :admin, Spree::FeaturedItem %>
  <%= tab :featured_items, label: :featured_items, icon: 'clipboard', url: admin_featured_items_path %>
<% end %>

<% if can? :admin, Spree::Winery %>
  <%= tab :wineries, label: Spree.t('admin.wineries'), icon: 'coffee', url: admin_wineries_path %>
<% end %>

<% if can? :admin, Spree::BlogEntry %>
  <%= tab :blog_entries, label: Spree.t('admin.blog_entry.listing'), icon: 'rss-square', url: admin_blog_entries_path %>
<% end %>

<% if can? :admin, Spree::NewsEntry %>
  <%= tab :news_entries, label: Spree.t('admin.news_entry.listing'), icon: 'newspaper-o', url: admin_news_entries_path %>
<% end %>

<% if can? :admin, Spree::MapMarker %>
  <%= tab :map_markers, label: Spree.t('admin.map_markers'), icon: 'map-marker', url: admin_map_markers_path %>
<% end %>

<% if can? :admin, Spree::Calculator::Event %>
  <%= tab :calculator, url: admin_calculator_events_path, icon: 'calculator', match_path: %r(^/admin/calculator) do %>
    <%- render partial: 'spree/admin/shared/wine_calculator_sub_menu' %>
  <% end %>
<% end %>
