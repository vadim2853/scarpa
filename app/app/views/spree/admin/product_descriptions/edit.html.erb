<%= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => Spree.t('admin.product_descriptions') } %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @product_description } %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t('admin.back_to_product_descriptions_list'), admin_product_product_descriptions_url(@product), :icon => 'arrow-left' %></li>
<% end %>

<%= form_for [:admin, @product, @product_description], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_product_description">
    <div class="alfa">
      <%= render :partial => 'form', :locals => { :f => f } %>
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'refresh' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= link_to Spree.t('actions.cancel'), admin_product_product_descriptions_url(@product), :id => 'cancel_link', :class => 'button remove' %>
    </div>
  </fieldset>
<% end %>
