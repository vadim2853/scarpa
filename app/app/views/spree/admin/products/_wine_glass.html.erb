<tr id="wine-glass-<%= p.id %>" data-hook="admin_products_index_rows">
  <td class="align-center"><%= link_to p.sku, admin_product_path(p.id) %></td>
  <td class="align-center"><%= image_tag p.display_image.attachment(:mini) %></td>
  <td class="align-center"><%= link_to p.name, admin_product_path(p.id) %></td>
  <td class="align-center">
    <%= link_to 'Delete wine glass', 
