<% content_for :page_title do %>
  <%= Spree.t('admin.blog_entry.show') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t('admin.blog_entry.back_to_list'), spree.admin_blog_entries_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<div class="alpha ten columns">
  <fieldset class="no-border-bottom">
    <legend align="center">
      <span><%= Spree.t('admin.blog_entry.preview_text') %></span>
    </legend>

    <div class='field'>
      <%= @blog_entry.preview_text.html_safe %>
    </div>
  </fieldset>

  <fieldset class="no-border-bottom">
    <legend align="center">
      <span><%= Spree.t('admin.blog_entry.full_text') %></span>
    </legend>

    <div class='field'>
      <%= @blog_entry.full_text.html_safe %>
    </div>
  </fieldset>
</div>

<div class="alpha six columns">
  <fieldset class="no-border-bottom">
    <legend align="center">
      <span><%= Spree.t(:other) %></span>
    </legend>

    <div class='field'>
      <label><%= Spree.t('admin.blog_entry.user') %></label>
      <p><%= @blog_entry.user.login %></p>
    </div>

    <div class='field'>
      <label><%= Spree.t('admin.blog_entry.posted_on') %></label>
      <p><%= @blog_entry.posted_on %></p>
    </div>

    <div class='field'>
      <label><%= Spree.t('admin.blog_entry.view_count') %></label>
      <p><%= @blog_entry.view_count %></p>
    </div>
  </fieldset>
</div>
